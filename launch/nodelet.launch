<launch>
    <!-- Camera Settings -->
    <arg name="ip_address" default="192.168.1.11"/>
    <arg name="frame_id" default="flir_gige"/>
    <arg name="camera" default="flir_gige"/>
    <arg name="calib_url"
        default="package://flir_gige/calib/calib_$(arg camera).yml"/>
    <arg name="fps" default="20.0"/>
    <arg name="raw" default="false"/>

    <!-- Node Settings -->
    <arg name="output" default="screen"/>
    <arg name="plugin" default="false"/>
    <arg name="proc" default="false"/>
    <arg name="view" default="false"/>

    <!-- Standalone -->
    <arg unless="$(arg plugin)" name="option"
        value="standalone flir_gige/FlirGigeNodelet"/>

    <!-- Manager -->
    <arg if="$(arg plugin)" name="manager" default="flir_gige_nodelet"/>
    <arg if="$(arg plugin)" name="option"
        value="load flir_gige/FlirGigeNodelet $(arg manager)"/>
    <node if="$(arg plugin)" pkg="nodelet" type="nodelet"
        name="$(arg manager)" args="manager" output="$(arg output)">
    </node>

    <!-- Nodelet -->
    <node pkg="nodelet" type="nodelet" name="$(arg camera)"
        output="$(arg output)" args="$(arg option)">
        <param name="identifier" type="string" value="$(arg ip_address)"/>
        <param name="frame_id" type="string" value="$(arg frame_id)"/>
        <param name="camera" type="string" value="$(arg camera)"/>
        <param name="calib_url" type="string" value="$(arg calib_url)"/>
        <param name="fps" type="double" value="$(arg fps)"/>
        <param name="raw" type="bool" value="$(arg raw)"/>
    </node>

    <!-- Need to fix this -->
<!--     <node if="$(arg proc)" pkg="nodelet" type="nodelet" name="thermal_proc"
        args="load flir_gige/ThermalProcNodelet $(arg manager)"
        output="$(arg output)">
        <remap from="~image_raw" to="/$(camera)/image_raw"/>
        <remap from="~camera_info" to="/$(camera)/camera_info"/>
    </node>
 -->
    <!-- View -->
    <arg name="view" default="false"/>
    <group if="$(arg view)">
        <node pkg="image_view" type="image_view" name="$(arg camera)_raw"
            output="$(arg output)" args="image:=/$(arg camera)/image_raw">
        </node>
        <node if="$(arg proc)" type="image_view" name="$(arg camera)_proc"
            output="$(arg output)" args="image:=/$(arg camera)/image_proc">
        </node>
    </group>
</launch>
